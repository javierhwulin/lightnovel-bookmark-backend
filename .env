# Light Novel Bookmarks Backend Configuration
# Copy this file to .env and adjust values as needed

# Application Settings
APP_TITLE="Light Novel Bookmarks API"
APP_DESCRIPTION="A personal portal to organize, search, and manage your light novels"
APP_VERSION="1.0.0"
APP_DEBUG=true
APP_ENVIRONMENT="development"
APP_HOST="127.0.0.1"
APP_PORT=8000

# Database Configuration
DATABASE_URL="sqlite:///light_novels.db"
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# CORS Settings (Frontend Integration)
# Add your frontend URLs here, separated by commas
CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://localhost:5173,http://localhost:4173,http://localhost:5000,http://127.0.0.1:3000,http://127.0.0.1:8080,http://127.0.0.1:5173,http://127.0.0.1:4173,http://127.0.0.1:5000"
CORS_CREDENTIALS=true
CORS_METHODS="GET,POST,PUT,PATCH,DELETE,OPTIONS"
CORS_HEADERS="*"

# Web Scraper Settings
SCRAPER_DELAY=6
SCRAPER_TIMEOUT=30
SCRAPER_USER_AGENT="Light Novel Bookmarks Bot/1.0.0"
SCRAPER_MAX_RETRIES=3

# Development Notes:
# - The default setup supports common frontend dev servers
# - Svelte (Vite) typically runs on port 5173
# - React/Next.js typically runs on port 3000
# - Vue CLI typically runs on port 8080
# - Preview/production builds often use port 4173 or 5000
